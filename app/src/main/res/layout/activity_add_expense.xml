<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FEL.AddExpenseActivity">

    <TextView
        android:id="@+id/add_expense_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add expense to project"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/add_expense_form_lila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/add_expense_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/add_expense_name_txt"
            android:gravity="center"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:hint="Name"/>
        <EditText
            android:id="@+id/add_expense_amount_txt"
            android:gravity="center"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:hint="Amount"/>
        <Button
            android:onClick="onAddBtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>