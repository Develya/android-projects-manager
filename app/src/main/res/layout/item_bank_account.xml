<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bankaccount_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="NameBankAccount"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bankaccount_tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Balance"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bankaccount_tv_name"
        app:layout_constraintStart_toStartOf="@+id/bankaccount_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/bankaccount_tv_name" />

    <Button
        android:id="@+id/bankaccount_btn_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Transactions"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bankaccount_tv_balance"
        app:layout_constraintStart_toStartOf="@+id/bankaccount_tv_balance"
        app:layout_constraintTop_toBottomOf="@+id/bankaccount_tv_balance" />

</androidx.constraintlayout.widget.ConstraintLayout>