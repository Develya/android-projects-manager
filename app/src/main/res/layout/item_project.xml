<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:background="@drawable/card"
android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/item_project_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{project.name}"
            android:textColor="@color/color60"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/item_project_btn_expenses"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:backgroundTint="@color/color10"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/color60"/>

            <Button
                android:id="@+id/item_project_btn_agreements"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Agreements"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:backgroundTint="@color/color10"
                android:textColor="@color/color60"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>